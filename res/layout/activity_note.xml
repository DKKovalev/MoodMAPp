<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/text_view_title"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:textSize="40dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/text_view_comment" android:layout_below="@+id/text_view_title" android:layout_alignParentLeft="true"
            android:layout_marginTop="94dp" android:layout_alignParentRight="true" android:textSize="25dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_view_photo" android:layout_alignParentBottom="true"
            android:layout_marginBottom="146dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/text_view_date" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
</RelativeLayout>